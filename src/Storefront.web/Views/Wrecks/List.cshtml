@model IEnumerable<Storefront.web.Data.Model.Wreck>

@{
    ViewData["Title"] = "Our current wrecks";
}

<h1 class="mt-4 mb-4">Pick the wreck of your dreams</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm">
                <div class="card mb-3" style="width: 18rem;">
                    <img class="card-img-top img-fluid" src="~/image/@item.ImageName" style="width: 100%;height: 25vh;object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@($"{item.Price:c}")</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Name)</p>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
