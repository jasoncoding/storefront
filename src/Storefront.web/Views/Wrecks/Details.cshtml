@model Storefront.web.Data.Model.Wreck

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <img class="rounded img-fluid" src="~/image/@Model.ImageName">
    
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @($"{Model.Price:c}")
        </dd>
        <dt class="col-sm-2">
            In our yard since
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddedOn)
        </dd>
    </dl>
</div>
